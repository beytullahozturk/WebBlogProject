
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@*Dashboard*@

<div class="page-header">
    <h3 class="page-title">
        <span class="page-title-icon bg-gradient-primary text-white mr-2">
            <i class="mdi mdi-home"></i>
        </span> Dashboard
    </h3>

</div>
<div class="row">
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body">
                <img src="~/writer/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Toplam Blog <i class="mdi mdi-chart-line mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5"> @ViewBag.TotalBlog </h2>
                <h6 class="card-text">Eklenen toplam blog sayısı</h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="~/writer/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Blogunuz <i class="mdi mdi-bookmark-outline mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5"> @ViewBag.TotalBlogForUser </h2>
                <h6 class="card-text">Eklediğiniz blog sayısı</h6>
            </div>
        </div>
    </div>
    <div class="col-md-4 stretch-card grid-margin">
        <div class="card bg-gradient-success card-img-holder text-white">
            <div class="card-body">
                <img src="~/writer/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="font-weight-normal mb-3">
                    Toplam Kategori <i class="mdi mdi-diamond mdi-24px float-right"></i>
                </h4>
                <h2 class="mb-5"> @ViewBag.TotalCategory </h2>
                <h6 class="card-text">Eklenen toplam kategori sayısı</h6>
            </div>
        </div>
    </div>
</div>
<!--recent blog list with category-->
@await Component.InvokeAsync("BlogListForDashboard")
<!--recent blog list with category-->
<!--writer about on dashboard-->
@await Component.InvokeAsync("WriterAboutOnDashboard")
<!--writer about on dashboard-->
<!--cateory list-->
@await Component.InvokeAsync("CategoryListForDashboard")
<!--cateory list-->

<script src="~/writer/assets/js/dashboard.js"></script>

