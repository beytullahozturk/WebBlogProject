@using CoreDemo.Models 
@model List<Message2>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="~/WriterImages/@item.SenderUser.WriterImage" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.SenderUser.WriterName mesaj gönderdi.</h6>
                    
                <p class="text-gray mb-0"> @item.MessageDate.TimeCalculation() </p>
            </div>
        </a>
    }

    <div class="dropdown-divider"></div>
    <a href="/Message/InBox"><h6 class="p-3 mb-0 text-center">@Model.Count yeni mesaj</h6></a>
</div>