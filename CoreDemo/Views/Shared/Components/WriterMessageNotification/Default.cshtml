@model List<Message>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Mesajlar</h6>
    @foreach (var item in Model)
    {
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <img src="~/writer/assets/images/faces/face4.jpg" alt="image" class="profile-pic">
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject ellipsis mb-1 font-weight-normal">@item.Sender tarafından mesajınız var</h6>
                <p class="text-gray mb-0"> @item.MessageDate.ToString("dd.MM.yyyy") </p>
            </div>
        </a>
    }

    <div class="dropdown-divider"></div>
    <a href="#"><h6 class="p-3 mb-0 text-center">4 yeni mesaj</h6></a>
</div>