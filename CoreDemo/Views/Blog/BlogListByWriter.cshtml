@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
            <p class="card-description">
                <a href="/Blog/BlogAdd" class="btn btn-success btn-sm btn-fw">Yeni Blog</a>
            </p>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Başlık </th>
                        <th> Tarih </th>
                        <th> Kategori </th>
                        <th> Durum </th>
                        <th> Sil </th>
                        <th> Düzenle </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.BlogID </td>
                            <td> <a href="#">@item.BlogTitle</a> </td>
                            <td> @item.BLogCreateDate.ToString("dd-MM-yyy") </td>
                            <td> @item.CategoryID </td>
                            <td> @item.BlogStatus </td>
                            <td> <a href="#" class="btn badge badge-danger">Sil</a></td>
                            <td> <a href="#" class="btn badge badge-warning">Düzenle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>