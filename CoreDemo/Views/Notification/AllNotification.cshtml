@model List<Notification>
@{
    ViewData["Title"] = "AllNotification";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>All Notification</h1>





<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Bildirim </th>
                        <th> Detay </th>
                        <th> Tarih </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @item.NotificationID </td>
                            <td class="bg-@item.NotificationTypeColor"> @item.NotificationType </td>
                            <td> @item.NotificationDetails </td>
                            <td> @item.NotificationDate.ToString("dd.MM.yyyy") </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>