@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesajlar</h4>
                <p class="card-description">
                    <a href="/Message/MessageAdd" class="btn btn-success btn-sm btn-fw">Yeni Mesaj</a>
                </p>
                <table class="table">
                    <thead>
                        <tr>
                            <th> Gönderen </th>
                            <th> Konu </th>
                            <th> Tarih </th>
                            <th>  </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.SenderUser.WriterName </td>
                                <td class="font-weight-bold"> @item.Subject </td>
                                <td> @item.MessageDate.ToString("dd.MM.yyy") </td>
                                <td> <a href="/Message/MessageDetails/@item.MessageID" class="btn badge badge-warning">Detay</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
