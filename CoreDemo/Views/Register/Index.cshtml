    $('#btnTermsUse').click(function () {
        swal("Kullanım Koşulları", "Kullanım koşulları sözleşmesi, başta web siteleri olmak üzere bir hizmet sağlayıcı ile hizmetten yararlanmak isteyenler arasında, hizmetten yararlanmak için uyulması gereken şartları ve kullanıcıların bu şartlara uyma taahhütlerini içeren, yasal bir sözleşmedir.");
    });
</script>
